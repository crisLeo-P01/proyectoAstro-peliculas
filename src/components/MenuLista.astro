---
import Home from "../../public/icons/Home.astro";
import Buscar from "../../public/icons/Lupa.astro";
import Lista from "./Lista.astro";
import Tags from "./Tags.astro";
---

<div class="flex flex-col overflow-hidden h-full">
  <div class="py-5 px-4 bg-neutral-900 rounded-md">
    <button class="flex gap-5 items-center text-white mb-5">
      <Home />
      <span class="text-xl">Inicio</span>
    </button>
    <button class="flex gap-5 items-center text-white">
      <Buscar />
      <span class="text-xl">Buscar</span>
    </button>
  </div>
  <div class="p-4 rounded-lg">
    <div class="flex gap-2 mb-3">
      <Tags title="Lista" />
      <Tags title="Artista" />
      <Tags title="Álbumes" />
      <Tags title="Pódcasts y programas" />
      <Tags title="Lista" />
    </div>

    <Lista />
  </div>
</div>
