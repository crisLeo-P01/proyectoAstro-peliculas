---
interface Props {
  image: string,
  title: string,
  description: string
}

const { image, title, description } = Astro.props;
---
<div class="relative overflow-hidden bg-neutral-800 border-2 border-rose-700 rounded-xl">
    <div>
        <img src={image} alt={title} />
    </div>
    <div>
        <span>{title}</span>
        <span>{description}</span>
    </div>
</div>